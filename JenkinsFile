pipeline {
    agent any 
    
    tools {
        maven 'maven'
    }
    
    stages {
        stage('SCM') {
            steps {
                echo "Cloning the repo"
                git branch: 'main', url: 'https://github.com/Arsenet7/carles-project'
            }
        }
        
        stage('Build & Test') {
            steps {
                sh ''' 
                java --version
                mvn clean package
                '''
            }
        }
    }
}
